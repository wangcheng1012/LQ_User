<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_hint_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6666"
                android:visibility="gone"
                android:clickable="true">

    <ImageView
        android:id="@+id/iv_hint_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/verify_close"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/iv_hint_close"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/ll_treasure_commit"
            style="@style/mw.ver"
            android:padding="20dp">

            <TextView
                style="@style/ww"
                android:layout_gravity="center_horizontal"
                android:text="确认收货信息"
                android:textColor="@color/bg_gray666"
                android:textSize="16sp"
                />

            <View
                style="@style/view1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/tv_hint_name_phone"
                style="@style/ww.black"/>

            <TextView
                android:id="@+id/tv_hint_address"
                style="@style/ww.black"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btn_hint_commit"
                style="@style/btn_commit"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="15dp"
                android:text="确定"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_hint_success"
            style="@style/ww.ver"
            android:layout_gravity="center"
            android:padding="20dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/successful"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="奖品兑换成功"
                android:textColor="@color/bg_gray666"
                android:textSize="20sp"
                />

        </LinearLayout>


    </FrameLayout>

</RelativeLayout>