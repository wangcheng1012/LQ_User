<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white"
              android:orientation="vertical">

    <include layout="@layout/item_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bg_theme"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reservation_unuse"
            style="@style/item_tv_ballpark_nearby"
            android:text="待使用"/>

        <TextView
            android:id="@+id/tv_reservation_evaluation"
            style="@style/item_tv_ballpark_nearby"
            android:text="待评价"/>

        <TextView
            android:id="@+id/tv_reservation_use"
            style="@style/item_tv_ballpark_nearby"
            android:text="已完成"/>

    </LinearLayout>

  <android.support.v4.view.ViewPager
      android:id="@+id/vp_personal_reservation"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>
</LinearLayout>
