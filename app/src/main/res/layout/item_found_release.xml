<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_found_release"
                style="@style/mm"
                android:background="@color/bg_cfff"
                android:orientation="vertical"
                android:paddingTop="80dp"
                android:visibility="gone">

    <ImageView
        android:id="@+id/iv_found_close"
        style="@style/ww"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/verify_close"
        />

    <LinearLayout
        style="@style/mw.hor"
        android:layout_below="@id/iv_found_close"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/bg_white_solid_15ellipse"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_found_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/found_photo"
            />

        <ImageView
            android:id="@+id/iv_found_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/found_video"
            />

    </LinearLayout>

</RelativeLayout>