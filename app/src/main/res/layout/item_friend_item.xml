<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_friend_item"
              android:background="@android:color/white"
              style="@style/mw.hor">

    <ImageView
        android:id="@+id/iv_friend_headimg"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:padding="10dp"
        android:src="@drawable/head_photo_normal"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <LinearLayout
            style="@style/mw.hor"
            >

            <TextView
                android:id="@+id/tv_friend_nickname"
                style="@style/ww.black"
                android:layout_weight="1"
                android:text="昵称"
                />

            <TextView
                android:id="@+id/tv_friend_time"
                style="@style/ww.12sp"
                android:alpha="0.7"
                android:text="12:00"
                android:textColor="@color/bg_gray"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/mw.hor"
            android:layout_marginTop="3dp"
            >

            <TextView
                android:id="@+id/tv_friend_last"
                style="@style/ww"
                android:textSize="11sp"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:text="最新消息"
                android:textColor="@color/bg_gray"
                />


            <TextView
                android:id="@+id/tv_friend_last_num"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="right"
                android:background="@drawable/bg_theme3_solid_round"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="10sp"/>

        </LinearLayout>

        <View
            style="@style/view1dp"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>


</LinearLayout>