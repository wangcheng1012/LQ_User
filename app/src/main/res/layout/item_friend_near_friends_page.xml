<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:background="@android:color/transparent">

    <LinearLayout
        style="@style/wm"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bg_white_solid_ellipse2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_near_friends_headimg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/head_photo_normal"
            />

        <LinearLayout
            style="@style/ww.ver"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp">


            <TextView
                android:id="@+id/tv_near_friends_nickname"
                style="@style/ww.black"
                android:ellipsize="end"
                android:maxEms="10"
                android:maxLines="1"
                android:text="昵称"
                android:textSize="13sp"
                />

            <LinearLayout
                style="@style/ww"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_near_friends_age"
                    style="@style/ww.white"
                    android:background="@drawable/bg_theme3_solid_ellipse"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="♀ 22"
                    android:textSize="12sp"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/loc"
                    />

                <TextView
                    android:id="@+id/tv_near_friends_distance"
                    style="@style/ww.12sp"
                    android:layout_marginLeft="2dp"
                    android:text="1.7km"
                    android:textColor="@color/bg_gray"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</FrameLayout>