<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mw"
    android:background="@color/bg_theme"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_personal_headimg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        android:src="@drawable/head_photo_normal" />

    <RelativeLayout
        android:id="@+id/rl_personal_edit"
        style="@style/mw">

        <TextView
            android:id="@+id/tv_personal_name"
            style="@style/ww.white"
            android:layout_centerInParent="true"
            android:paddingTop="4dp"
            android:text="昵称"
            android:textSize="18sp" />

        <ImageView
            style="@style/ww"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_personal_name"
            android:paddingTop="4dp"
            android:src="@drawable/name_edit" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_personal_age"
        style="@style/ww.white"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_theme3_solid_ellipse"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="♀ 00"
        android:textSize="12sp" />

    <LinearLayout
        style="@style/mw.hor"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/ll_personal_my_dynamic"
            style="@style/ll_fragment_personal">

            <TextView
                android:id="@+id/tv_personal_news_count"
                style="@style/ww.white.13sp"
                android:text="0" />

            <TextView
                style="@style/ww.white.13sp"
                android:text="动态" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout
            android:id="@+id/ll_personal_my_friend"
            style="@style/ll_fragment_personal">

            <TextView
                android:id="@+id/tv_personal_friend_count"
                style="@style/ww.white.13sp"
                android:text="0" />

            <TextView
                style="@style/ww.white.13sp"
                android:text="好友" />
        </LinearLayout>

        <View style="@style/vertical_line" />

        <LinearLayout
            android:id="@+id/ll_personal_my_team"
            style="@style/ll_fragment_personal">

            <TextView
                android:id="@+id/tv_personal_team_count"
                style="@style/ww.white.13sp"
                android:text="0" />

            <TextView
                style="@style/ww.white.13sp"
                android:text="球队" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>