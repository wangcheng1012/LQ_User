<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_notice_item"
    style="@style/mw.hor.15dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_white_ellipse">

    <ImageView
        android:id="@+id/iv_notice_headimg"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <LinearLayout
        style="@style/mw.ver"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp">


        <LinearLayout
            style="@style/mw.hor"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_notice_nickname"
                style="@style/ww.black"
                android:layout_weight="1"
                android:text="姓名" />


            <TextView
                android:id="@+id/tv_notice_handle0"
                style="@style/ww"
                android:layout_gravity="center_vertical"
                android:text="已同意"
                android:textColor="@color/bg_gray666" />

            <LinearLayout
                android:id="@+id/ll_notice_handle1"
                style="@style/ww"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_notice_Agreed"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_next"
                    android:gravity="center"
                    android:text="同意"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/btn_notice_Refused"
                    android:layout_width="55dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_btn_red"
                    android:gravity="center"
                    android:text="拒绝"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            style="@style/mw.hor"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/tv_notice_age"
                style="@style/ww.white"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_theme3_solid_ellipse"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="♀ 22"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_notice_type"
                style="@style/ww.12sp"
                android:text="类型"
                android:textColor="@color/bg_gray666" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>