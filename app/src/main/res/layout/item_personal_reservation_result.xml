<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/mm.ver"
              android:background="@color/bg_white">

    <include layout="@layout/item_title"/>

    <com.dingwei.lq_user.ui.myview.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            style="@style/mm"
            android:orientation="vertical"
            >

            <LinearLayout
                style="@style/ll_details_content"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/iv_result_code_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    style="@style/mw.hor"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        style="@style/ww.13sp"
                        android:text="预约码:  "
                        android:textColor="@color/bg_gray"
                        />

                    <TextView
                        android:id="@+id/tv_result_code"
                        style="@style/ww"
                        android:text="   "
                        android:textColor="@color/bg_red"
                        android:textSize="15sp"
                        />

                </LinearLayout>

                <View
                    style="@style/view1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="15dp"/>

                <TextView
                    style="@style/ww.12sp"
                    android:text="温馨提示:"
                    android:textColor="@color/bg_gray"
                    />

                <TextView
                    style="@style/ww.12sp"
                    android:text="预约码将作为唯一的凭证，请妥善保管，打死也不告诉别人，女朋友也不行"
                    android:textColor="@color/bg_gray"
                    />
            </LinearLayout>

            <include layout="@layout/item_personal_reservation_result_foot"/>
        </LinearLayout>
    </com.dingwei.lq_user.ui.myview.MyScrollView>

</LinearLayout>