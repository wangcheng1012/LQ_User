<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/mm.ver"
              android:background="@color/bg_white">

    <LinearLayout
        style="@style/ll_details_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_reservation_venue_name"
            style="@style/ww"
            android:text="篮球场"
            android:textColor="@android:color/black"
            />

        <LinearLayout
            style="@style/mw.hor"
            android:layout_marginTop="10dp"
            >

            <TextView
                style="@style/ww.13sp"
                android:text="联系电话"
                android:textColor="@color/bg_gray"
                />

            <TextView
                android:id="@+id/tv_reservation_tel"
                style="@style/ww.13sp"
                android:layout_marginLeft="20dp"
                android:text="023-123456789"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/mw.hor"
            android:layout_marginTop="5dp"
            >

            <TextView
                style="@style/ww.13sp"
                android:text="营业时间"
                android:textColor="@color/bg_gray"
                />

            <TextView
                android:id="@+id/tv_reservation_time"
                style="@style/ww.13sp"
                android:layout_marginLeft="20dp"
                android:text="08:00-20:00"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/mw.hor"
            android:layout_marginTop="5dp"
            >

            <TextView
                style="@style/ww.13sp"
                android:text="联系地址"
                android:textColor="@color/bg_gray"
                />

            <TextView
                android:id="@+id/tv_reservation_address"
                style="@style/ww.13sp"
                android:layout_marginLeft="20dp"
                android:text="重庆市"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/ll_details_content"
        android:orientation="vertical"
        >

        <TextView
            style="@style/ww"
            android:layout_weight="1"
            android:text="预约详情"
            android:textColor="@color/font_theme2"
            android:textSize="14sp"
            />

        <View
            style="@style/view1dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            style="@style/mw.hor"
            >

            <TextView
                style="@style/ww.13sp"
                android:text="预约人数"
                android:textColor="@color/bg_gray"
                />

            <TextView
                android:id="@+id/tv_reservation_number"
                style="@style/ww.13sp"
                android:layout_marginLeft="20dp"
                android:text="0人"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/mw.hor"
            android:layout_marginTop="5dp"
            >

            <TextView
                style="@style/ww.13sp"
                android:text="球场类型"
                android:textColor="@color/bg_gray"
                />

            <TextView
                android:id="@+id/tv_reservation_ballpark_type"
                style="@style/ww.13sp"
                android:layout_marginLeft="20dp"
                android:text="全场"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/mw.hor"
            android:layout_marginTop="5dp"
            >

            <TextView
                style="@style/ww.13sp"
                android:text="预约时间"
                android:textColor="@color/bg_gray"
                />

            <TextView
                android:id="@+id/tv_reservation_time_text"
                style="@style/ww.13sp"
                android:layout_marginLeft="20dp"
                android:text="0:00-0:00"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/mw.hor"
            android:layout_marginTop="5dp"
            >

            <TextView
                style="@style/ww.13sp"
                android:text="预约球场"
                android:textColor="@color/bg_gray"
                />

            <TextView
                android:id="@+id/tv_reservation_ballpark_name"
                style="@style/ww.13sp"
                android:layout_marginLeft="20dp"
                android:text="球场"
                android:textColor="@android:color/black"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/mw.hor"
            android:layout_marginTop="5dp"
            >

            <TextView
                style="@style/ww.13sp"
                android:text="合        计"
                android:textColor="@color/bg_gray"
                />

            <TextView
                style="@style/ww"
                android:layout_marginLeft="20dp"
                android:text="¥"
                android:textColor="@color/bg_red"
                android:textSize="11sp"
                />

            <TextView
                android:id="@+id/tv_reservation_price"
                style="@style/ww"
                android:text="00"
                android:textColor="@color/bg_red"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/tv_reservation_price_float"
                style="@style/ww"
                android:text=".00"
                android:textColor="@color/bg_red"
                android:textSize="11sp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/ll_details_content"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:id="@+id/ll_pay_type0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_pay_type0_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_red_gray_round"
                android:padding="10dp"
                android:src="@drawable/account"/>

            <TextView
                style="@style/ww.13sp"
                android:text="余额"
                />

            <TextView
                android:id="@+id/tv_pay_type0_balance"
                style="@style/ww"
                android:text="¥45.00"
                android:textColor="@color/bg_red"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pay_type1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_pay_type1_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_red_gray_round"
                android:padding="10dp"
                android:src="@drawable/alipay"
                />

            <TextView
                style="@style/ww.13sp"
                android:text="支付宝"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pay_type2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_pay_type2_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_red_gray_round"
                android:padding="10dp"
                android:src="@drawable/weixin"
                />

            <TextView
                style="@style/ww.13sp"
                android:text="微信"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_reservation_details_commit"
        style="@style/btn_commit"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:text="立即支付"
        />

</LinearLayout>